<div class="container">
  <hr>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8">
      <div class="text-center btn-group btn-group-justified">
        <a href="/rock" class="btn btn-primary">Play Rock</a>
        <a href="/paper" class="btn btn-info">Play Paper</a>
        <a href="/scissors" class="btn btn-primary">Play Scissors</a>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h2 class="panel-title text-center">
            <% @user_move.capitalize =%>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <div class="panel-body">
      <img class="img-responsive" src="/assets/images/scissors.png" width="200">
    </div>

  <div class="col-md-4">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h2 class="panel-title text-center">
          <%= @computer_move.capitalize =%>
        </h2>
      </div>
    </div>
  </div>

  <div class="panel-body">
    <% if @computer_move == "scissors" %>
    <img class="img-responsive" src="/assets/images/scissors.png" width="200">
  </div>

  <% elsif @computer_move == "paper" %>
  <img class="img-responsive" src="http://localhost:3000/assets/images/paper.png" width="200">

  <% else %>
  <img class="img-responsive" src="http://localhost:3000/assets/images/rock.png" width="200">
  <%end%>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well text-center">

        <p> You played Scissors. </p>

        <img src="hiit://localhost:3000/assets/images/scissors.png"
        width="100">

      </div>
    </div>


        <p>
          The computer played <%= @computer_move %>.
        </p>

        <% if @computer_move == "scissors" %>
        <h3> You tied! </h3>
        <% elsif @computer_move == "paper" %>
        <h3> You  Win! </h3>
        <% else %>
        <h3>You Lose!</h3>
        <% end %>
